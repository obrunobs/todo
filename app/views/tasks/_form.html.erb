<%= form_with(model: task) do |form| %>
  <%= form.hidden_field :parent_id, value: task.parent_id || params[:parent_id] %>
  <div class="form-group">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :due_date, style: "display: block" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="form-group form-check">
    <%= form.checkbox :done, class: "form-check-input" %>
    <%= form.label :done, class: "form-check-label" %>
  </div>

    <%= form.submit class: "btn btn-primary", data: { diable_with: "Saving..." } %>
    <%= link_to "Cancelar", tasks_path, class: "btn btn-secondary" %>
<% end %>
